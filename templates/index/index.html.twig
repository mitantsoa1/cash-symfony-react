{% extends 'base.html.twig' %}

{% block title %}Index
{% endblock %}

{% block body %}

	{{ include("components/navbar.html.twig") }}

	<main
		class="flex-1 p-6 bg-white overflow-y-auto">
		<!-- Contenu principal -->
		<h2 class="text-2xl font-bold text-gray-700 mb-4">Frais</h2>
		<form class=" p-4 rounded-md w-1/3 bg-red-400">
			<div class="grid grid-cols-1 gap-4">
				<div>
					<label for="operateur" class="block text-sm font-medium text-gray-700">Opérateur</label>
					<select id="operateur" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
						<option>Orange</option>
						<option>Orange</option>
						<option>Orange</option>

						<!-- Autres options -->
					</select>
				</div>
				<div>
					<label for="type" class="block text-sm font-medium text-gray-700">Type</label>
					<select id="type" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
						<option>Retrait</option>
						<!-- Autres options -->
					</select>
				</div>
				<div>
					<label for="min" class="block text-sm font-medium text-gray-700">Min</label>
					<input type="number" id="min" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
				</div>
			</div>
		</form>
		<table class="min-w-full bg-white shadow-md rounded-md mt-6">
			<thead>
				<tr>
					<th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Min</th>
					<th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Max</th>
					<th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Frais</th>
					<th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Type</th>
					<th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Opérateur</th>
					<th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Actions</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="px-4 py-2 text-sm text-gray-600">1</td>
					<td class="px-4 py-2 text-sm text-gray-600">200</td>
					<td class="px-4 py-2 text-sm text-gray-600">20</td>
					<td class="px-4 py-2 text-sm text-gray-600">Retrait</td>
					<td class="px-4 py-2 text-sm text-gray-600">Orange</td>
					<td class="px-4 py-2 text-sm text-gray-600">
						<a href="#" class="text-red-500 hover:text-red-700">Supprimer</a>
						<a href="#" class="ml-4 text-blue-500 hover:text-blue-700">Modifier</a>
					</td>
				</tr>
				<!-- Autres lignes -->
			</tbody>
		</table>
	</main>


{% endblock %}
